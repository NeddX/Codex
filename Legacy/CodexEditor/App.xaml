<Application x:Class="CodexEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CodexEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Seperate out these stlyes into their own xml files then merge them -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles/Colours.xaml"/>
                <ResourceDictionary Source="View/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="View/Styles/ScrollViewStyle.xaml"/>
                <ResourceDictionary Source="View/Styles/TabStyle.xaml"/>
                <ResourceDictionary Source="Dictionaries/ControlTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
