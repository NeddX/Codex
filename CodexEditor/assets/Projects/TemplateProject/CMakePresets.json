{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-msvc",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_PRESET_NAME": "${presetName}",
                "CX_ENABLE_CEDITOR": "on"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "vs2022",
            "hidden": false,
            "generator": "Visual Studio 17",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "installDir": "C:/Program Files/Carbine/CEditor",
