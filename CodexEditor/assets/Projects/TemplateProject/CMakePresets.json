                "CMAKE_C_COMPILER": "clang.exe",
                "CMAKE_CXX_COMPILER": "clang++.exe",
                "CMAKE_PRESET_NAME": "${presetName}",
                "CX_ENABLE_CEDITOR": "on",
                "CMAKE_CXX_FLAGS": "-fuse-ld=link"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
